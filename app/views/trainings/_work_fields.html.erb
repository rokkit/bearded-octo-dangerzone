<h4>Work</h4>  <%= link_to "remove", '#', class: "remove_fields" %>

<fieldset>
<div class="control-group">
    <%= f.label :day, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :day, :class => 'number_field' %>
    </div>
  </div>
<div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
<div class="control-group">
    <%= f.label :weight, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :weight, :class => 'number_field' %>
    </div>
  </div>
<div class="control-group">
    <%= f.label :set, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :set, :class => 'number_field' %>
    </div>
  </div>

  <%= f.hidden_field :_destroy %>
 </fieldset>
